page{
  background-color: rgb(247, 242, 242);
}
.swiper-tab{  
  width: 100%;  
   background-color:white;
  text-align: center;  
  line-height: 80rpx;
  border-top: 1rpx solid  #DDDDDD; 
  flex: 0 0 100rpx;
}  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
}  
.on{ color: #da7c0c;  
    border-bottom: 5rpx solid #da7c0c;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
  
    text-align: center;  
}  
 
.tab-item{
  display:inline-block;
  margin-left: 4px;
  margin-right: 4px;
  font-size: 15px;
  text-align: center;
  width: 22%;
}
 

.page_card{

  margin:20rpx 0 20rpx 0;
  border-bottom: 6rpx solid  #DDDDDD;  
}


.itemtitle{
  margin-top: 30rpx;
  font-size: 30rpx;
  font-family: SimHei;
  margin-left: 30rpx;
  justify-content: space-between;
}
.time{
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
  font-size: 25rpx;
  color: rgb(179, 176, 176);
}
.img1{
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  width: 100%;
  height:100%;
}
.main{
  flex: 1;
  position: relative;
}

.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.card{
  width: 47vw;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background-color: white;
  border-radius: 5px;
}

.card-box{
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
}

.main-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
  background: rgb(245, 239, 239);
}